{% extends "base-admin.html.twig" %}
{% block content %}
    <div class="container">

            <h1 class="sub-header mt-5">Contacts</h1>

                <div class="row my-4">
    <div class="col-lg-12 col-md-12 ">
        <div class="table-responsive">
            <table class="table-responsive-sm table-striped  "  id="Contacts" >
                <thead class="table-info">
                    <tr>


                    <th style="width: 15%">Date</th>
                    <th style="width: 10%">Nom</th>
                    <th style="width: 10%">Pr√©nom</th>
                    <th style="width: 15%">Mail</th>
                    <th >Message</th>

                    <th  style="width: 15%" >Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts | reverse %}
                        <tr>

                            <td>{{ contact.date | date('d-m-y')}}</td>
                            <td>{{ contact.name }}</td>
                            <td>{{ contact.prenom }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.comment }}</td>

                            <td class="text-center">
                                <div class="btn-group">
                                <button type="button" class="btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Actions
                                </button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="{{ path('contact.edit',{"id":contact.id}) }}"><button class="dropdown-item btn-sm" type="button">Editer/Modifier</button></a>
                                    <a href=""><button class="dropdown-item btn-sm" type="button">Supprimer</button></a>
                                </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            <hr>
        </div>

 {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js">

            $(document).ready(function() {
                $('#Contacts').DataTable(
                    {
                        "language":{
                            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"}
                    } )});
        </script>

    {% endblock javascripts %}