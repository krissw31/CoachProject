{% extends "base-admin.html.twig" %}
{% block content %}

        <div class="col-md-9 col-lg-10 main">
        <h1 class="sub-header mt-5">Newsletter <a href="#ajoutNewsletter" class="btn btn-info"><span class="fa fa-plus"></span></a></h1>
                <hr>
                <div class="col-lg-12 col-md-12 ">
                        <div class="table-responsive">
                                <table class="table table-responsive table-striped  " >
                                        <thead class="table-info">
                                                <tr>

                                                        <th style="width: 10%">Date</th>
                                                        <th style="width: 15%">Titre</th>
                                                        <th style="width: 50%">Contenu</th>
                                                        <th style="width: 10%">Envoyé</th>


                                                        <th  style="width: 15%" >Actions</th>
                                                </tr>
                                        </thead>
                                        <tbody>
                                        {% for newsletter in newsletters | reverse %}
                                                <tr>

                                                        <td>{{ newsletter.date | date('d-m-y')}}</td>
                                                        <td>{{ newsletter.title }}</td>
                                                        <td>{{ newsletter.content }}</td>
                                                        <td>
                                                             {% if newsletter.send is same as(true) %}
                                                                     <div class="text-center" style="background-color: greenyellow"> oui </div>
                                                             {% else %}
                                                                     <div class="text-center" style="background-color: #7DA0B1"> non </div>
                                                             {% endif %}
                                                        </td>

                                                        <td class="text-center">
                                                                <div class="btn-group">
                                                                        <button type="button" class="btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                                Actions
                                                                        </button>
                                                                        <div class="dropdown-menu dropdown-menu-right">
                                                                                <a href="{{ path('newsletter.edit',{"id":newsletter.id}) }}"><button class="dropdown-item btn-sm" type="button">Editer/Modifier</button></a>
                                                                                <a href="{{ path('newsletter.delete',{"id":newsletter.id}) }}"><button class="dropdown-item btn-sm" type="button">Supprimer</button></a>
                                                                                <a href="#"><button class="dropdown-item btn-sm" type="button">L'envoyer</button></a>

                                                                        </div>
                                                                </div>
                                                        </td>
                                                </tr>
                                        {% endfor %}
                                        </tbody>
                                </table>
                                <hr>
                        </div>
                </div>

                <div class="col-lg-12 col-md-12 ">
                        <h1 class="sub-header mt-5"  id="ajoutNewsletter">Ajouter une newsletter </h1>
                        <hr>

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                        <hr>
                        <button type="submit" class="btn btn-outline-info">   Créer   </button>
                        <hr>
                    {{ form_end(form) }}
                </div>

        </div>



{% endblock %}