{% extends "base-admin.html.twig" %}
{% block content %}
<div class="container">

    <h1 class="text-muted">Newsletter : {{ titreNewsletter }}</h1>
    <hr>

    <hr>
    <h3 class="text-muted">Informations générales:</h3>
    <div class="col-sm-8" >

        <p>(Message posté le <small>{{ dateNewsletter|date("Y/m/d h:i:s") }})</small>.</p>

        <p style="background-color: #C82829">Modifier à l'intérieur des encadrers suivants puis valider.</p>
        {{ form_start(form) }}
        {{ form_widget(form) }}


        <button type="submit" class="btn btn-outline-success">Modifier</button>
        <a href="{{ path('adminNewsletter') }}" class="btn btn-outline-info">Retour</a>


        {{ form_end(form) }}
        <hr>
</div>
{% endblock %}