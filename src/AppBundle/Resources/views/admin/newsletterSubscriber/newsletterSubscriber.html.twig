{% extends "base-admin.html.twig" %}
{% block content %}
    <div class="container">
        <h1 class="sub-header mt-5">Souscripteurs newsletter</h1>

                 <div class="row my-4">
            <div class="col-lg-12 col-md-12 ">
                <div class="table-responsive">
                    <table class="table-responsive table-striped"  >
                        <thead class="table table-info">
                        <tr>

                            <th style="width: 15%">id</th>
                            <th style="width: 30%">Mail</th>
                            <th style="width: 30%">MailContact</th>
                            <th  style="width: 25%" >Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for newsSubscriber in newsSubscribers | reverse %}
                            <tr>


                                <td>{{ newsSubscriber.id }}</td>
                                <td>{{ newsSubscriber.email }}</td>
                                <td>{{ newsSubscriber.contactSub }}</td>

                                <td class="text-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Actions
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href=""><button class="dropdown-item btn-sm" type="button">Editer/Modifier</button></a>
                                            <a href=""><button class="dropdown-item btn-sm" type="button">Supprimer</button></a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <hr>
                </div>
            </div>
        </div>
    </div>
{% endblock %}