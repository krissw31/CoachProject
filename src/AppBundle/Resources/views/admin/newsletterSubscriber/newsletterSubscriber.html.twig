{% extends "base-admin.html.twig" %}
{% block content %}
    <div class="container">
        <h1 class="sub-header mt-5">Souscripteurs newsletter</h1>

                 <div class="row my-4">
            <div class="col-lg-12 col-md-12 ">
                <div class="table-responsive">
                    <table class="table table-striped"  >
                        <thead class="table table-info">
                        <tr>

                            <th style="width: 15%">id</th>
                            <th style="width: 30%">Mail</th>

                            <th  style="width: 25%" >Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for newsSubscriber in newsSubscribers | reverse %}
                            <tr>


                                <td>{{ newsSubscriber.id }}</td>
                                <td>{{ newsSubscriber.email }}</td>


                                <td class="text-center">
                                    <div class="btn-group">
                                       <a href="{{ path('newsletterSub.delete',{"id":newsSubscriber.id}) }}"> <button class="btn btn-info" type="button">Supprimer</button></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <hr>
                </div>
            </div>
        </div>
    </div>
{% endblock %}